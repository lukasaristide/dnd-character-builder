<selector
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<stroke
				android:color="?colorSecondary"
				android:width="2dp"
				/>
			<corners
				android:radius="6dp"
				/>
		</shape>
	</item>

	<item>
		<shape android:shape="rectangle">
			<stroke
				android:width="1dp"
				/>
			<corners
				android:radius="6dp"
				/>
		</shape>
	</item>

</selector>
