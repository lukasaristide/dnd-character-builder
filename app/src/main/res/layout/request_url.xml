<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- inputType textMultiLine is for line wrapping -->
    <EditText
        android:autofillHints="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/request_url_text"
        android:inputType="textUri|textMultiLine"
        android:text="https://raw.githubusercontent.com/5etools-mirror-1/5etools-mirror-1.github.io/v1.154.2/data/"
        android:hint="@string/request_url_hint"
        tools:ignore="HardcodedText"
        />


</LinearLayout>
